<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.CreateGroupController"
      spacing="10" alignment="CENTER" prefWidth="800" prefHeight="600">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Create new Group"/>
    <TextField fx:id="groupNameField" promptText="Name of the Group"/>
    <Button text="Create Group" onAction="#handleCreateGroup"/>
    <Button text="Back" onAction="#handleBackButton"/>
</VBox>
