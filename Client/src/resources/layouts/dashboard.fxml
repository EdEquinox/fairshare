<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.DashboardController">

    <!-- Sidebar -->
    <left>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <VBox spacing="10" style="-fx-padding: 15; -fx-background-color: #282828;">
                <Text fx:id="userText" text="User Section"
                      style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #FFFFFF;"/>
                <Button text="Edit Profile" style="-fx-background-color: #444444; -fx-text-fill: #FFFFFF;"
                        onAction="#handleEditProfile"/>
                <Button text="Logout" style="-fx-background-color: #FF5722; -fx-text-fill: #FFFFFF;"
                        onAction="#handleLogout"/>
                <Separator style="-fx-background-color: #555555;"/>

                <Text text="Group Section" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-fill: #FFFFFF;"/>
                <Button text="Add New Group" style="-fx-background-color: #444444; -fx-text-fill: #FFFFFF;"
                        onAction="#handleAddNewGroup"/>
                <ListView fx:id="groupList" VBox.vgrow="ALWAYS"
                          onMouseClicked="#handleGroupSelection"
                          style="-fx-background-color: #333333; -fx-text-fill: #FFFFFF; -fx-border-color: #444444;" />
                <Separator style="-fx-background-color: #555555;"/>

                <Button text="Group Invites" style="-fx-background-color: #444444; -fx-text-fill: #FFFFFF;"
                        onAction="#handleGroupInvites"/>
            </VBox>
        </ScrollPane>
    </left>

    <!-- Main Content -->
    <center>
        <VBox spacing="10" style="-fx-padding: 15;" VBox.vgrow="ALWAYS">

            <!-- Top Section: Users in Selected Group -->
            <VBox spacing="5" alignment="TOP_CENTER" VBox.vgrow="NEVER">
                <Label text="Users in Selected Group"
                       style="-fx-font-size: 16; -fx-font-weight: bold;"
                       alignment="CENTER"/>
                <ListView fx:id="userListView"
                          style="-fx-background-color: #ffffff;"
                          VBox.vgrow="ALWAYS"/>
            </VBox>

            <!-- Bottom Section: Expenses for Selected User -->
            <VBox spacing="5" alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                <Label text="Expenses"
                       style="-fx-font-size: 16; -fx-font-weight: bold;"
                       alignment="CENTER"/>
                <TableView fx:id="expensesTable"
                           style="-fx-background-color: #ffffff;"
                           VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn text="Date" fx:id="dateColumn" prefWidth="150"/>
                        <TableColumn text="Description" fx:id="descriptionColumn" prefWidth="250"/>
                        <TableColumn text="Amount" fx:id="amountColumn" prefWidth="100"/>
                        <TableColumn text="Paid By (User ID)" fx:id="paidByColumn" prefWidth="100"/>
                    </columns>
                </TableView>

                <!-- Total Expenses and Buttons -->
                <HBox spacing="10" alignment="CENTER">
                    <Label fx:id="totalExpensesLabel"
                           text="Total Expenses: $"
                           style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER">
                    <Button text="Add"
                            onAction="#handleAddExpense"
                            style="-fx-font-size: 14; -fx-padding: 5 10;"/>
                    <Button text="Edit"
                            onAction="#handleEditExpense"
                            style="-fx-font-size: 14; -fx-padding: 5 10;"/>
                    <Button text="Delete"
                            onAction="#handleDeleteExpense"
                            style="-fx-font-size: 14; -fx-padding: 5 10;"/>
                    <Button text="Export to CSV"
                            onAction="#handleExportToCSV"
                            style="-fx-font-size: 14; -fx-padding: 5 10;"/>
                </HBox>
            </VBox>
        </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox style="-fx-background-color: #282828; -fx-padding: 10;" alignment="CENTER">
            <Label text="Distributed Programming 2024/25 - Group Dashboard"
                   style="-fx-text-fill: #FFFFFF;" textAlignment="CENTER"/>
        </HBox>
    </bottom>
</BorderPane>
