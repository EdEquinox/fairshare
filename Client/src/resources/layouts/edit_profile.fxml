<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.EditProfileController" spacing="20" alignment="CENTER" prefWidth="800" prefHeight="600">
    <Text text="Edit Profile" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Label text="Name:"/>
        <TextField fx:id="nameField" promptText="Enter your name"/>

        <Label text="Email:"/>
        <TextField fx:id="emailField" promptText="Enter your email"/>

        <Label text="Phone:"/>
        <TextField fx:id="phoneField" promptText="Enter your phone"/>

        <Label text="Password:"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"/>
    </GridPane>

    <Button text="Save Changes" onAction="#handleSaveChangesAction" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
    <Button text="Cancel" onAction="#handleCancelAction" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
</VBox>
